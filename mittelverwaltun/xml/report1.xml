<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple"
                        "./report.dtd">

<report name="FB-Mittelverwaltung Report" pageformat="A4" leftmargin="72" topmargin="72" >
  
  <!-- REPORT HEADER -->
  <!-- This band appears once at the beginning of the report.  In this example, -->
  <!-- the header contains four labels. -->
  <reportheader height="70" fontname="SansSerif" fontstyle="plain" fontsize="10">

    <rectangle x="0" y="0" width="100%" height="30"
      color="#6699CC" weight="0" draw="true" fill="true"/>
		<rectangle x="0" y="0" width="100%" height="30"
      color="#000000" weight="0" draw="true" fill="false"/>
		
		<label fontname="Tahoma" fontstyle="bold" fontsize="18"
      x="0" y="8" width="100%" height="18" alignment="center"
      >FB-Mittelverwaltung Reports</label>
		
    <string-field fieldname="reportName" fontname="Tahoma" fontstyle="bold" 
    	fontsize="12" x="3" y="40" width="100%" height="0"
      alignment="left" dynamic="true"/>
		<line x1="0" y1="60" x2="0" y2="60" color="#CCCCCC" weight="0.5"/>

  </reportheader>
  
	<!-- PAGE FOOTER -->
  <!-- Displays the page number, centered at the bottom of the page. -->
  <pagefooter height="14"
    onfirstpage="true" onlastpage="true"
    fontname="Tahoma" fontstyle="plain" fontsize="9">

    <number-field fieldname="PageNumber"
      format="Page 0"
      x="0" y="3" width="100%" height="9"
      alignment="center" nullstring="hull"/>

  </pagefooter>
	
	<groups>
    <group name="ZVKonto Group">
      <groupheader height="20" fontname="SansSerif" fontstyle="bold" fontsize="12" pagebreak="false">
        <rectangle x="0" y="10" width="100%" height="15" color="#CCCCCC" weight="0"/>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="3" y="13" width="100%" height="10" alignment="left">ZV-Konto</label>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="180" y="13" width="100" height="10" alignment="left">zugewiesene Mittel</label>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="312" y="13" width="100" height="10" alignment="left">Ausgaben</label>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="0" y="13" width="100%" height="10" alignment="right">Kontostand </label>
      </groupheader>
    </group>
  </groups>

  <!-- THE ITEM BAND -->
  <!-- This band is printed once for each row of data in the TableModel. -->
  <items height="0"
    fontname="Tahoma" fontstyle="plain" fontsize="9">

    <string-field x="0" y="7" width="100%" height="9" alignment="left"
      fontname="Tahoma" fontstyle="plain" fontsize="8"
      fieldname="ZV-Konto"/>

		<string-field x="155" y="7" width="100" height="9" alignment="right"
      fontname="Tahoma" fontstyle="plain" fontsize="8"
      fieldname="zugewiesene Mittel"/>
		<label fontname="Tahoma" fontsize="8" x="260" y="7" width="20" height="9" alignment="left">Euro</label>

		<string-field x="245" y="7" width="100" height="9" alignment="right"
      fontname="Tahoma" fontstyle="plain" fontsize="8"
      fieldname="Ausgaben"/>
		<label fontname="Tahoma" fontsize="8" x="350" y="7" width="20" height="9" alignment="left">Euro</label>

    <string-field x="0" y="7" width="95%" height="9" alignment="right"
      fontname="Tahoma"
      fieldname="Kontostand"/>
    <label fontname="Tahoma" fontsize="8" x="0" y="7" width="100%" height="9" alignment="right">Euro</label>

  </items>

  <!-- FUNCTIONS -->
  <!-- Declares the functions used in this report. -->
  <functions>
    <property-ref name="report.date"/>

    <function name="PageNumber" class="org.jfree.report.function.PageFunction"/>

    <function name="OverallCount"
      class="org.jfree.report.function.ItemCountFunction">
      <properties>
        <property name="field">Name</property>
      </properties>
    </function>

  </functions>

</report>
