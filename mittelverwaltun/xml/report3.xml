<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple"
                        "./report.dtd">

<report name="FB-Mittelverwaltung Report" pageformat="A4" leftmargin="72" topmargin="72" >
  
  <!-- REPORT HEADER -->
  <!-- This band appears once at the beginning of the report.  In this example, -->
  <!-- the header contains four labels. -->
  <reportheader height="100" fontname="SansSerif" fontstyle="plain" fontsize="10">

    <image-field x="1" y="1" width="295" height="80" fieldname="logo"/>
    <rectangle x="0" y="0" width="100%" height="82"
      color="#000000" weight="0" draw="true" fill="false"/>
		
		<label fontname="Tahoma" fontstyle="bold-italic" fontsize="18"
      x="310" y="35" width="100%" height="22" alignment="left"
      >R E P O R T S</label>
    
  </reportheader>
  
	<!-- PAGE FOOTER -->
  <!-- Displays the page number, centered at the bottom of the page. -->
  <pagefooter height="14"
    onfirstpage="true" onlastpage="true"
    fontname="Tahoma" fontstyle="plain" fontsize="9">

    <number-field fieldname="PageNumber"
      format="Page 0"
      x="0" y="3" width="100%" height="9"
      alignment="center" nullstring="hull"/>

  </pagefooter>
	
	<groups>
    <group name="Institut Group">
      <groupheader height="40" fontname="SansSerif" fontstyle="bold" fontsize="12" pagebreak="false">
        <label x="0" y="11" width="100%" height="12" alignment="left">Institut: </label>
        <string-field x="50" y="11" width="300" height="12" alignment="left" fieldname="Institut"/>
        <line x1="0" y1="23" x2="0" y2="23" weight="0.5"/>
        <rectangle x="0" y="30" width="100%" height="15" color="#CCCCCC" weight="0"/>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="3" y="33" width="100%" height="10" alignment="left">FB-Konto</label>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="200" y="33" width="100" height="10" alignment="left">verteilte Mittel</label>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="300" y="33" width="100" height="10" alignment="left">Ausgaben</label>
        <label fontname="Tahoma" fontstyle="bold" fontsize="10" x="0" y="33" width="100%" height="10" alignment="right">Kontostand </label>
      </groupheader>
      <fields>
        <field>Institut</field>
      </fields>
    </group>
  </groups>

  <!-- THE ITEM BAND -->
  <!-- This band is printed once for each row of data in the TableModel. -->
  <items height="0"
    fontname="Tahoma" fontstyle="plain" fontsize="9">

    <string-field x="0" y="7" width="100%" height="9" alignment="left"
      fontname="Tahoma" fontstyle="plain" fontsize="8"
      fieldname="FB-Konto"/>

		<number-field x="175" y="7" width="100" height="9" alignment="right" format="#,##0.00 'Euro '"
      fontname="Tahoma" fontstyle="plain" fontsize="8"
      fieldname="verteilte Mittel"/>
		
		<number-field x="250" y="7" width="100" height="9" alignment="right" format="#,##0.00 'Euro '"
      fontname="Tahoma" fontstyle="plain" fontsize="8"
      fieldname="Ausgaben"/>
		
    <number-field x="0" y="7" width="100%" height="9" alignment="right" format="#,##0.00 'Euro '"
      fontname="Tahoma" fontstyle="plain" fontsize="8"
      fieldname="Kontostand"/>
    
  </items>

  <!-- FUNCTIONS -->
  <!-- Declares the functions used in this report. -->
  <functions>
    <property-ref name="report.date"/>

    <function name="PageNumber" class="org.jfree.report.function.PageFunction"/>

    <function name="OverallCount"
      class="org.jfree.report.function.ItemCountFunction">
      <properties>
        <property name="field">Name</property>
      </properties>
    </function>

  </functions>

</report>
